{
  "compilerOptions": {
  "module": "NodeNext",
  "moduleResolution": "NodeNext",
  "target": "ES2022",
  "lib": ["ES2022"],
  "outDir": "lib",
  "strict": true,
  "esModuleInterop": true,
  "noImplicitReturns": true,
  "noUnusedLocals": true,
  "sourceMap": true,
  "types": ["node"],
  "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
  }
